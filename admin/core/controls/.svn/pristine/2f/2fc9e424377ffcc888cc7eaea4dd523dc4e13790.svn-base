<!-- <input #control [(ngModel)]="_ngModel" class="form-control" /> -->

<input #control hidden/>


<div class="file-input-group file-group">
    <input #control1 readonly="readonly" type="text" class="{{inpCss}}" [ngModel]="fileName" (click)="downloadFile()" style="cursor: pointer;" />

    <button style="margin-left:0px;" *ngIf="!multiFile && (!ngModel || !ngModel.filE_NAME_OLD)" type="button" class="btn btn-primary" [disabled]="disabled" (click)="importFileFromServer()"><i class="fa fa-plus"></i></button>
    <button style="margin-left:0px;" *ngIf="!multiFile && ngModel && ngModel.filE_NAME_OLD" type="button" class="btn btn-primary" [disabled]="disabled" (click)="importFileFromServer()"><i class="fa fa-pen"></i></button>
    <button style="margin-left:0px;" *ngIf="!multiFile && ngModel && ngModel.filE_NAME_OLD" type="button" class="btn btn-danger" [disabled]="disabled" (click)="deleteFile()"><i class="fa fa-eraser"></i></button>

    <button style="margin-left:0px;" *ngIf="multiFile" type="button" class="btn btn-primary" (click)="fileMultiModal.show(this)">{{l("ChooseFile")}}</button>

    <!-- <button style="margin-left:0px;" *ngIf="multiFile" type="button" class="btn btn-primary" (click)="fileMulti.show(_ngModel)">{{l("ChooseFile")}}</button> -->
    <div id="{{idProgress}}" #loading></div>
</div>

<div *ngIf="showMultifile">
    <file-multi-modal (modalSave)="getMultiFile($event)" [disabled]="disabled" [folderUpload]="folderUpload" #fileMulti>
    </file-multi-modal>
</div>

<input type="file" [multiple]="multiFile" (change)="uploadFile($event)" hidden #fileControl />