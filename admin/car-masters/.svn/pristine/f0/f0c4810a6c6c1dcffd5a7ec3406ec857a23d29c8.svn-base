<div [@routerTransition]>
    <appToolbar #appToolbar></appToolbar>
    <div id="page-list-area">
        <div class="m-subheader">
            <div class="row align-items-center">
                <div class="mr-auto col-auto">
                    <h3 class="m-subheader__title m-subheader__title--separator">
                        <!-- Begin Title -->
                        <span>{{l("CarMaster")}}</span>
                        <!-- End Title -->
                    </h3>
                </div>
                <div class="col text-right mt-3 mt-md-0">
                    <div class="btn-group dropdown mr-2">
                        <button class=" btn btn-outline-success" (click)="downloadCarMasterExcel()">
                            <i class="far fa-file-excel"></i>
                            {{l("ExcelOperations")}}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div id="content" class="m-content">
            <div class="m-portlet m-portlet--mobile">
                <div class="m-portlet__body">
                    <form class="horizontal-form filter-form" autocomplete="off">
                        <div class="m-form m-form--label-align-right">
                            <div class="row align-items-center m--margin-bottom-30">
                                <!-- Begin Filter -->

                                <!-- Số xe -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>{{l("N_Plate")}}</label>
                                        <input [(ngModel)]="filterInput.n_PLATE" name="n_PLATE" autoFocus
                                            class="form-control m-input" type="text">
                                    </div>
                                </div>

                                <!-- Hãng sản xuất -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>{{l("Manufacturer")}}</label>
                                        <all-code-select name="manufacturer" [(ngModel)]="filterInput.manufacturer"
                                            #manufacturer="ngModel" [emptyText]="l('SelectAll')"
                                            [cdName]="'MANUFACTURER'"></all-code-select>
                                    </div>
                                </div>

                                <!-- Mục đích sử dụng -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>{{l("UsePurpose")}}</label>
                                        <all-code-select name="purpose" [(ngModel)]="filterInput.purpose"
                                            #purpose="ngModel" [emptyText]="l('SelectAll')" [cdName]="'CAR_PURPOSE'">
                                        </all-code-select>
                                    </div>
                                </div>

                                <!-- Tên đơn vị -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>{{l("BranchName")}}</label>
                                        <select2-custom name="brancH_ID" [(ngModel)]="filterInput.brancH_ID"
                                            [(list)]="branches" [valueMember]="'brancH_ID'"
                                            [displayMember]="'brancH_CODE|brancH_NAME'">
                                        </select2-custom>
                                    </div>
                                </div>

                                <!-- Loại xe -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>{{l("CarType")}}</label>
                                        <select2-custom name="caR_TYPE_ID" [(ngModel)]="filterInput.caR_TYPE_ID"
                                            [(list)]="carTypes" [valueMember]="'caR_TYPE_ID'"
                                            [displayMember]="'caR_TYPE_ID|caR_TYPE_NAME'">
                                        </select2-custom>
                                    </div>
                                </div>

                                <!-- Nước sản xuất -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>{{l("ProductCountry")}}</label>
                                        <all-code-select name="procountry" [(ngModel)]="filterInput.procountry"
                                            [emptyText]="l('SelectAll')" [cdName]="'PRODUCT_COUNTRY'"></all-code-select>
                                    </div>
                                </div>

                                <!-- Đơn vị độc lập -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <checkbox-control #level="ngModel" name="level" [label]="l('IndependentUnit')"
                                            [checked]="true" [TrueValue]="'UNIT'" [FalseValue]="'ALL'"
                                            [(ngModel)]="filterInput.level"></checkbox-control>
                                    </div>
                                </div>

                                <!-- Tình trạng duyệt -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>{{l("AuthStatus")}}</label>
                                        <all-code-select name="autH_STATUS" [(ngModel)]="filterInput.autH_STATUS"
                                            [emptyText]="l('SelectAll')" [cdName]="'AUTH_STATUS'"></all-code-select>
                                    </div>
                                </div>
                                <!-- End Filter -->

                                <div style="display:none;" class="col-md-12">
                                    <div class="form-group">
                                        <button class="btn btn-primary btn-search"
                                            (click)="onSearch()">{{l('Search')}}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row align-items-center">
                        <div class="primeng-datatable-container {{dataTable.isLoading}}">
                            <div class="spinner-border m-5" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                            <core-table #coreTable class="custom-table ui-table" (reloadPage)="getCarMasters()">
                                <thead>
                                    <tr>
                                        <!-- Begin Table Column -->
                                        <th>
                                            <span style="width: 60px">{{l("No")}}</span>
                                        </th>
                                        <!-- Số xe -->
                                        <th sortField="N_PLATE">
                                            <span style="width: 150px">{{l("N_Plate")}}</span>
                                        </th>
                                        <!-- Mã đơn vị -->
                                        <th sortField="KHU_VUC">
                                            <span style="width: 250px">{{l("AreaName")}}</span>
                                        </th>
                                        <!-- Tên đơn vị -->
                                        <th sortField="BRANCH_CODE">
                                            <span style="width: 250px">{{l("BranchCode")}}</span>
                                        </th>
                                        <!-- PGD -->
                                        <th sortField="PGD">
                                            <span style="width: 150px">{{l("BankAgency")}}</span>
                                        </th>
                                        <!-- Loại xe -->
                                        <th sortField="CAR_TYPE_NAME">
                                            <span style="width: 150px">{{l("CarType")}}</span>
                                        </th>
                                        <!-- Hãng sản xuất -->
                                        <th sortField="MANUFACTURER">
                                            <span style="width: 150px">{{l("Manufacturer")}}</span>
                                        </th>
                                        <!-- Mục đích sử dụng -->
                                        <th sortField="PURPOSE">
                                            <span style="width: 150px">{{l("UsePurpose")}}</span>
                                        </th>
                                        <!-- Model -->
                                        <th sortField="MODEL">
                                            <span style="width: 150px">{{l("Model")}}</span>
                                        </th>
                                        <!-- Tình trạng duyệt -->
                                        <th sortField="AUTH_STATUS_NAME">
                                            <span style="width: 150px">{{l("AuthStatus")}}</span>
                                        </th>
                                        <!-- End Table Column -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr *ngFor="let record of dataTable.records" class="selectable"
                                        (dblclick)="onUpdate(record)" (click)="selectRow($event,record)">
                                        <!-- Begin Table Value -->
                                        <td><span
                                                class="mo-header"></span>{{(filterInput.skipCount + dataTable.records.indexOf(record)) + 1}}
                                        </td>
                                        <td><span class="mo-header"></span>{{record.n_PLATE}}</td>
                                        <td><span class="mo-header"></span>{{record.khU_VUC}}</td>
                                        <td><span class="mo-header"></span>{{record.chI_NHANH}}</td>
                                        <td><span class="mo-header"></span>{{record.pgd}}</td>
                                        <td><span class="mo-header"></span>{{record.caR_TYPE_NAME}}</td>
                                        <td><span class="mo-header"></span>{{record.manufactureR_NAME}}</td>
                                        <td><span class="mo-header"></span>{{record.caR_PURPOSE_NAME}}</td>
                                        <td><span class="mo-header"></span>{{record.mO_NAME}}</td>
                                        <td><span class="mo-header"></span>{{record.autH_STATUS_NAME}}</td>

                                        <!-- End Table Value -->
                                    </tr>
                                </tbody>
                            </core-table>

                            <div class="primeng-no-data" *ngIf="dataTable.records.length == 0">
                                {{l('NoData')}}
                            </div>
                            <div class="primeng-paging-container">
                                <p-paginator [rows]="filterInput.maxResultCount || dataTable.defaultRecordsCountPerPage"
                                    #paginator (onPageChange)="getCarMasters($event)"
                                    [totalRecords]="dataTable.totalRecordsCount"
                                    [rowsPerPageOptions]="dataTable.predefinedRecordsCountPerPage">
                                </p-paginator>

                                <span class="total-records-count">
                                    {{l('TotalRecordsCount')}} {{dataTable.totalRecordsCount}}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>